{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "checkJs": true,
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "resolvePackageJsonImports": true,
        "rootDir": ".",
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
    ]
}